# -----------------------------------------------------------------------------
# Aegis v13 Environment Variables
# Copy this file to .env and fill in your values
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=8080
ENV=development  # development, staging, production

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aegis_v13
DB_USER=aegis_v13
DB_PASSWORD=aegis_v13_won
DATABASE_URL=postgresql://aegis_v13:aegis_v13_won@localhost:5432/aegis_v13

# DB Connection Pool
DB_MAX_CONNS=25
DB_MIN_CONNS=5
DB_MAX_CONN_LIFETIME=1h
DB_MAX_CONN_IDLE_TIME=30m

# -----------------------------------------------------------------------------
# Redis (Cache/Queue/Rate Limiting)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true

# -----------------------------------------------------------------------------
# External APIs
# -----------------------------------------------------------------------------
# KIS (한국투자증권)
KIS_APP_KEY=your_app_key_here
KIS_APP_SECRET=your_app_secret_here
KIS_ACCOUNT_NO=your_account_number_here
KIS_BASE_URL=https://openapi.koreainvestment.com:9443

# DART (전자공시)
DART_API_KEY=your_dart_api_key_here
DART_BASE_URL=https://opendart.fss.or.kr/api

# Naver Finance (가격, 수급 데이터)
NAVER_BASE_URL=https://finance.naver.com
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug  # debug, info, warn, error
LOG_FORMAT=json  # json, console

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
METRICS_ENABLED=true
METRICS_PORT=9090
